<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#7db3b7b7"
                android:endColor="@android:color/transparent"
                android:angle="180" >
            </gradient>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="3dp"
        android:top="0dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="40dp"
                android:top="40dp"
                android:right="10dp"
                android:left="10dp"
                >
            </padding>
            <solid android:color="#FFF"/>
        </shape>
    </item>
</layer-list>
